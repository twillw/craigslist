<div class="row">
  <% @posts.each do |post| %>
		<div class="col-lg-4">
			<%= link_to post.title, post_path(post) %>: <%= post.location %>
	    </br><%= number_to_currency(post.price) %>
	    </br><%= post.body %>
	  </div>
	<% end %>
</div>

<script>
  $('.nav a:contains("All Posts")').parent().addClass('active');
</script>