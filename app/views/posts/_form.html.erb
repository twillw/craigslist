<%= form_for @post, html: { multipart: true } do |f| %>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :photo %><br>
    <%= f.file_field :photo %>
  </div>
  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body, rows: 6 %>
  </div>
  <div>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  
  <%= f.submit :class => 'btn btn-success' %>

<% end %>
